{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "skipLibCheck": true
  }
}